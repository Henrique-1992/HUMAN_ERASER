<div class = "killer-container">
     <div class="cardshow">
        <% if @killer.photos.empty? %>
          <img src="https://plus.unsplash.com/premium_photo-1661714112996-c782972c03e7" class="card-img-top" alt="<%= "#{killer.first_name} #{killer.last_name} picture" %>">
        <% else %>
          <% @killer.photos.each do |photo| %>
            <%= cl_image_tag photo.key %>
          <% end %>
        <% end %>
        </div>
<h1 class="killer-title"><%= @killer.first_name %>
  <%= @killer.last_name  %> </h1>
<div class = "killer-description"><%= @killer.description %></div>

<%= simple_form_for [@killer, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.input :start_time, html5: true %>
    <%= f.input :end_time, html5: true %>
  </div>
<%=f.button :submit, class: "btn btn-danger text-black p-2 m-3"%>
<% end%>
<div>
<div><%=link_to "back", killers_path, class: "btn btn-danger text-black p-2 m-3"%></div>
</div>
