<%= simple_form_for(@killer) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :specialty %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, class: "btn btn-danger mb-4" %>
  </div>
<% end %>
